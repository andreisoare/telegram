<div class="auth">
  <div class="auth-rect clearfix">
    <div class="auth-left">
      <img class="logo" src="/img/telegram-logo.png"/>
    </div>
    <div class="auth-right">
      <img class="auth-postmark" src="/img/postmark.png"/>
      <div class="clear"></div>
      <div class="auth-right-content">
        <div class="auth-title">
          Get going ...
        </div>
        <form class="auth-form">
          <input class="auth-input" type="text" name="username" placeholder="Enter your username">
          <input class="auth-input" type="password" name="password" placeholder="Enter your password">
          <div class="auth-form-footer clearfix">
            <input type="submit" class="btn auth-submit" value="Log in">
            <div class="auth-alternatives">
              <a class="blue-link">Recover password</a>
              or
              <a class="blue-link">Sign up</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
